@model ConstructoraUH.Models.Proyecto

@{
    ViewBag.Title = "Crear Proyecto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Crear Nuevo Proyecto</h2>

<div class="row">
    <div class="col-md-8 offset-md-2">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="card shadow p-4">
                <h4 class="mb-4">Detalles del Proyecto</h4>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <!-- Nombre del Proyecto -->
                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.Nombre, "Nombre del Proyecto", new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", placeholder = "Ingrese el nombre del proyecto" })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </div>

                <!-- Fecha de Inicio -->
                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.FechaInicio, "Fecha de Inicio", new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.FechaInicio, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                    @Html.ValidationMessageFor(model => model.FechaInicio, "", new { @class = "text-danger" })
                </div>

                <!-- Fecha de Fin -->
                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.FechaFin, "Fecha de Fin", new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.FechaFin, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                    @Html.ValidationMessageFor(model => model.FechaFin, "", new { @class = "text-danger" })
                </div>

                <!-- Botones -->
                <div class="form-group mt-4 text-end">
                    <button type="submit" class="btn btn-success me-2">Guardar</button>
                    @Html.ActionLink("Volver a la Lista", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
